{
  "name": "tetris",
  "version": "1.0.0",
  "description": "Tetris game for the Mintbean Hackathon",
  "main": "index.html",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
    "start": "npm run lite",
    "lite": "lite-server",
    "imagemin": "imagemin images/* -o dist/images",
    "usemin": "usemin index.html -d dist --htmlmin -o dist/index.html",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "clean": "rimraf dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ibadra/tetris.git"
  },
  "author": "Ivon Badra",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ibadra/tetris/issues"
  },
  "homepage": "https://github.com/ibadra/tetris#readme",
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "lite-server": "^2.6.1",
    "rimraf": "^3.0.2"
  },
  "dependencies": {
    "font-awesome": "^4.7.0"
  }
}
